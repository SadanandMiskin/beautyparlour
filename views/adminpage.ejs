<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>Document</title>
    <style>
      :root{
        background-color: rgb(255, 255, 255);
        color: rgb(0, 0, 0);
        font-family:serif;
        border: none;
        
        
      }
      header{
        display: inline-flex;
        background-color: rgb(214, 195, 171);
        width: 100%;
        justify-content: space-between ;
        padding: 5px;
        margin-bottom: 4px;
        margin-left: -4px;
        margin-top: -8px;
        border-radius: 12px;
      }
      .container{
          background-color: rgb(239, 244, 247);
          width:290px;
          padding: 3px;
          margin-bottom: 10px;
          margin-left: 20px;
          border-radius: 0px;
          box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 20px 5px;

      }
      button{
        width: 80px;
        height: 40px;
        background-color: rgb(56, 103, 195);
        color: aliceblue;
        width: 100%;
        border: none;
        cursor: pointer;
      }
    </style>
</head>
<header>
  <h3>Admin Login</h3>
 
  <a href="/ADMIN_REVIEWS"> <button>reviews</button></a>
  <a href="/admin"><button>Logout</button></a>
</header>
<body>
  <% userList.sort((a, b) => a.date - b.date); %>
  <% userList.forEach(function(p) { %>
    <div class="container"> 
      <p>Name:     <b><%= p.name %></b></p>
      <p>Email:    <b><%= p.email %></b></p>
      <p>Phone:    <b><%= p.phone %></b></p>
      <p>Date:    <b><%= (p.date).toDateString() %></b></p>
      <form action="/ADMIN/<%= p._id %>" method="post">
        <button type="submit">Delete</button>
      </form>
    </div>
    
  <% }) %>
  
</body>
</html>
